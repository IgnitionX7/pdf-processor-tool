{
  "buildCommand": "npm run build && cp -r frontend/dist/* public/",
  "installCommand": "pip install -r requirements.txt",
  "functions": {
    "api/index.py": {
      "includeFiles": "{routes/**,*.py,config.py,models.py}"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/docs",
      "destination": "/api/index"
    },
    {
      "source": "/redoc",
      "destination": "/api/index"
    }
  ]
}
